<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/head %>
        <link rel="stylesheet" type="text/css" href="/css/home.css">
</head>

<body>
    <div id="wrapper">

        <!--Slide in Sidebar-->
        <div id="sidebar-wrapper">
            <nav class="sidebar-nav">
                <li>
                    <h5>Settings</h5>
                </li>
                <li><a href="/profile" id="">Profile</a></li>
                <li><a href="/logout" id="">Logout</a></li>
                <li><a id="night_mode">Night Mode</a></li>
            </nav>
        </div>
        <!--End of Sidebar-->

        <!--Main Content Wrapper-->
        <div id="page-wrapper">
            <section class="container">
                <div class="row">
                    <div class="column">
                        <div id="sidebar-opener">
                            <a id="sidebar-button">Settings</a>
                        </div>
                    </div>
                </div>

                <!--Header-->
                <% include ./partials/header %>

                    <!--Main Content-->
                    <div class="row">
                        <div class="column">
                            <p>Showing you the important things so that you can make the most of your day.</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="column">
                            <div class="box">
                                <p class="content time"></p>
                            </div>
                        </div>
                        <div class="column">
                            <div class="box">
                                <p class="content date"></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="column">
                            <div class="box">
                                <div class="content">
                                    <% if(user.city){ %>
                                        <p>Currently in
                                            <%= user.city %>
                                        </p>
                                        </>
                                        <% } else{ %>
                                            <p>Currently in unknown location</p>
                                            <% } %>
                                                <p id="day_forcast">Loading the day's forcast.</p>
                                                <p id="current_weather">Loading the current weather.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- <div class="row">
    <div class="column column-66">
        <div class="img_box">
            <img class="img_content" id="random_pic" src="" alt="">
        </div>
    </div>
    <div class="column">
        <div class="box caption">
            <p class="content" id="caption"></p>
        </div>
    </div>
</div> -->
                    <!--End of Main Content-->

            </section>
        </div>
    </div>
    <script src="/js/settings.js" type="text/javascript"></script>
    <script src="/js/slider.js" type="text/javascript"></script>
    <script src="/js/main.js" type="text/javascript"></script>
</body>

</html>